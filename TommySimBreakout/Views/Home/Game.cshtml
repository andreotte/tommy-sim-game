@model TommySimBreakout.Models.City

@{
    ViewBag.Title = "Game";
}

<h2>Game</h2>

<div>
    <h4>City</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Villagers)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Villagers)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wood)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wood)
            <form action="~/Home/Harvest">
                <input type="hidden" name="resource" value="wood" />
                <input type="submit" value="Harvest Wood" />
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Food)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Food)
            <form action="~/Home/Harvest">
                <input type="hidden" name="resource" value="food" />
                <input type="submit" value="Harvest Food" />
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Water)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Water)
            <form action="~/Home/Harvest">
                <input type="hidden" name="resource" value="water" />
                <input type="submit" value="Harvest Water"/>
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Wells)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Wells)
            <form action="~/Home/Build">
                <input type="hidden" name="structure" value="well" />
                <input type="submit" value="Build Well" />
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Houses)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Houses)
            <form action="~/Home/Build">
                <input type="hidden" name="structure" value="house" />
                <input type="submit" value="Build House" />
            </form>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Day)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>        
        
        <dt>
            @Html.DisplayNameFor(model => model.Actions)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Actions)
        </dd>

    </dl>
</div>

@*Button appears when there are no more actions in a turn.*@
@if(Model.Actions == 0)
{
    <form action="~/Home/EndTurn/" >
        <input type="submit" value="End Turn" />
    </form>
}

